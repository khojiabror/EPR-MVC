                                                </div>
                                            </div>
                                            <div class="col-12 col-sm-6">
                                                <div class="form-group">
                                                    <label>Role</label>
                                                    @Html.DropDownListFor(model => model.roleID, ViewBag.roleList as SelectList, "---tanlang---", new { @class = "form-control", @placeholder = "Rollari" })
