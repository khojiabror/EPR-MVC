<script>
    
    $(document).ready(function () {

        var formData = $("#userForm").serialize();
        $("saveBtn").submit(function (event) {
            $.ajax({
                type: "POST",
                url: "/Admin/UserSave",
                contentType: 'application/json',
                data: { model: formData },
                success: function () {
                    window.location.href = "/Admin/Users";
                }
            })
        }
    }
    


</script>
